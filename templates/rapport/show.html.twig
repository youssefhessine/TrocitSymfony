{% extends 'back.html.twig' %}

{% block title %}Rapport{% endblock %}

{% block body %}
    <h1>Rapport</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Reference</th>
                <td>{{ rapport.reference }}</td>
            </tr>
            <tr>
                <th>TitreRapport</th>
                <td>{{ rapport.titreRapport }}</td>
            </tr>
            <tr>
                <th>DescriptionProduit</th>
                <td>{{ rapport.descriptionProduit }}</td>
            </tr>
            <tr>
                <th>DateRapport</th>
                <td>{{ rapport.dateRapport ? rapport.dateRapport|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ rapport.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rapport_index') }}" class="btn btn-secondary">back to list</a>
    
   <a href="{{ path('rapport_edit', {'reference': rapport.reference}) }}" class="btn btn-primary">edit</a>

    {{ include('rapport/delete.html.twig', {'button_label': 'delete'}) }}

    <a href="{{ path('export_pdf', {'reference': rapport.reference}) }}" class="btn btn-success">Exporter en PDF</a>
    
{% endblock %}
