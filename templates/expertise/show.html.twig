{% extends 'front.html.twig' %}

{% block title %}Don{% endblock %}

{% block body %}
    <h1>Expertise</h1>
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder">{{ expertise.titre }}</h1>
                    <div class="fs-5 mb-5">
