{% extends 'base.html.twig' %}
{% block body %}



   <main id="main" class="main">

   

    <section class="section profile">
      <div class="row">
        <div class="col-xl-4">

          <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

              <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTdqXZFnoB9eMvcBSXMRQrtLBL_JhTfjZFbtcu9DiBoJfu4qqFZleZRD_6WTtfoMXkNZB0&usqp=CAU" alt="Profile" class="rounded-circle">
              <br>
              <h2 style="color:black !important" >{{ user.Prenom }} {{ user.Nom }} </h2>
              <h3>{{ user.Role }}</h3><br>
                 <a href="{{ path('app_user_edit1', {'id': user.id}) }}" class="btn btn-outline-dark mt-auto">Modifier </a>
                 {{ include('user/_delete_form.html.twig') }}
                

            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Votre Infos</button>
                </li>

              </ul>
              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview" style="color:black !important">
                  
                  <h5 class="card-title" style="color:#dc3545 !important">Profile Details</h5>

                  <div class="row" >
                    <div class="col-lg-3 col-md-4 label ">Nom</div>
                    <div class="col-lg-9 col-md-8" >{{ user.Nom }}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Prenom</div>
                    <div class="col-lg-9 col-md-8">{{ user.Prenom }}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Adresse</div>
                    <div class="col-lg-9 col-md-8">{{ user.Adresse }}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Email</div>
                    <div class="col-lg-9 col-md-8">{{ user.Email }}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Genre</div>
                    <div class="col-lg-9 col-md-8">{{ user.Genre }}</div>
                  </div>


                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Role</div>
                    <div class="col-lg-9 col-md-8">{{ user.Role }}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Numero</div>
                    <div class="col-lg-9 col-md-8">{{ user.Numero }}</div>
                  </div>


                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Jeton</div>
                    <div class="col-lg-9 col-md-8">{{ user.IdWallet.nbJeton }}</div>
                  </div>

                  

                </div>

                <br><br><br>
                <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Vos Offres</button>
                </li>

              </ul>


                  <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview" style="color:black !important">
                  



                    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        <tbody>
            {% for offre in offres %}
        <div class="col mb-5">
                        <div class="card h-100">
                            <center>
                            <img class="card-img-top" src="{{ asset('uploads/' ~ offre.imageFilename) }}" alt="{{ offre.titre }} image" />
                            </center>
                            <div class="card-body p-4">
                                <div class="text-center">
                                    
                                    <h4 class="fw-bolder">Titre: {{ offre.titre }}</h4>
                                   <h6 style="color:#ac0000"> Type :  {{ offre.type }}</h6>
                                   <h4>Description : {{ offre.description }}</h5><br>
                                   <h7> Date de cr√©ation : {{ offre.date ? offre.date|date('Y-m-d') : '' }}</h5><br><br>
                                   <h7>Categorie : {{ offre.nomCategorie.nom }}</h5>
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                  <center>
                          <a class="btn btn-outline-dark mt-auto" href="{{ path('app_offre_edit',{'id_user': user.id ,'id': offre.id }) }}">Modifier </a><br><br>
                                
                                   {{ include('offre/_delete_form.html.twig') }}
                               
                                   </center>                            
                                   </div>
                        </div>
                    </div>
      
        {% endfor %}

    </div>

                <div class="tab-pane fade pt-3" id="profile-settings">


                </div>

                
            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
 
{% endblock %}








