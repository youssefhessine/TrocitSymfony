{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
<div class="container">
<div class="row justify-content-center">
<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

    

    

<a class="btn btn-primary mt-4" href="{{ path('app_user_index') }}">back to list</a>

{{ form_start(form) }}
                    
                    
                    <div class="col-12">
                      <label for="yourName" class="form-label">Prenom</label>
                         {{ form_widget(form.Prenom,{'attr':{'class':'form-control'}}) }}
                      <div class="invalid-feedback">Please, enter your name!</div>
                    </div>

                    
                    <div class="col-12">
                      <label for="yourName" class="form-label">Nom</label>
                         {{ form_widget(form.Nom,{'attr':{'class':'form-control'}}) }}
                      <div class="invalid-feedback">Please, enter your name!</div>
                    </div>

                    <div class="col-12">
                      <label for="yourName" class="form-label">Numero</label>
                         {{ form_widget(form.Numero,{'attr':{'class':'form-control'}}) }}
                      <div class="invalid-feedback">Please, enter your name!</div>
                    </div>


                    <div class="col-12">
                      <label for="yourName" class="form-label">Email</label>
                         {{ form_widget(form.Email,{'attr':{'class':'form-control'}}) }}
                      <div class="invalid-feedback">Please, enter your name!</div>
                    </div>

                    <div class="col-12">
                      <label for="yourName" class="form-label">Adresse</label>
                         {{ form_widget(form.Adresse,{'attr':{'class':'form-control'}}) }}
                      <div class="invalid-feedback">Please, enter your name!</div>
                    </div>


                    <div class="col-12">
                      <label for="yourName" class="form-label">Password</label>
                         {{ form_widget(form.Password,{'attr':{'class':'form-control'}}) }}
                      <div class="invalid-feedback">Please, enter your name!</div>
                    </div>


                    <div class="col-12">
                      <label for="yourName" class="form-label">Genre</label>
                         {{ form_widget(form.Genre) }}<br>
                      <div class="invalid-feedback">Please, enter your name!</div>
                    </div>


                    <div class="col-12">
                      <label for="yourName" class="form-label">Role</label>
                         {{ form_widget(form.Role) }}<br>
                      <div class="invalid-feedback">Please, enter your name!</div>
                    </div>

                
                    
                    <div class="col-12">
                      <button class="btn btn-primary w-100" type="submit">Modifier</button>
                    </div>
                    
                   {{ form_end(form) }}
                   </div>
                   </div>
                   </div>
  </section>
{% endblock %}
